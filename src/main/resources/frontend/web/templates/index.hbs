<h4>Summary</h4>

<div class="pure-u-1-3 summary-box">
    <div class="pure-u-1 summary-box-title">	
        Root topics
    </div>
    <ul class="summary-box-content">
	    {{#each t in view.content.rootTopics}}
		   <li>{{#link-to 'topic' t.name}}{{t.name}}{{/link-to}}</li>
		{{else}}
            No root topics
        {{/each}}
	</ul>
</div>

<div class="pure-u-1-3 summary-box">
    <div class="pure-u-1 summary-box-title">	
        Subscriptions
    </div>
    <ul class="summary-box-content">
        {{#each s in view.content.subscriptions}}
           <li>from <b>{{s.ip}}</b> on {{#link-to 'topic' s.topic}}{{s.topic}}{{/link-to}}</li>
        {{else}}
            No subscriptions
        {{/each}}
    </ul>
</div>