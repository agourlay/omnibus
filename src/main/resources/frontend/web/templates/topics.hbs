<h4>Root topics</h4>

<table id="center-table" class="pure-table pure-table-horizontal pure-table-striped">
	<thead>
	    <tr>
	    	<th></th>
	        <th><i class="fa fa-tags"></i> Topic</th>
	        <th><i class="fa fa-users"></i> Subscriber No.</th>
	        <th>Event No.</th>
	        <th>Subtopic No.</th>
	        <th>Created</th>
	        <th>Delete</th>
	    </tr>
	</thead>
	<tbody>
		{{#each controller}}
			<tr>
				<td>
					{{#if hasSubTopics}}
					    <a href="#" {{action "expandTopic" subTopics}}>
					        <i class="fa fa-plus-square-o"></i>
					    </a>
					{{/if}}
				</td>
			    <td><b>{{#link-to 'topic' name}}{{name}}{{/link-to}}</b></td>
			    <td>{{subscribersNumber}}</td>
			    <td>{{eventsNumber}}</td>
			    <td>{{subTopicsNumber}}</td>
			    <td>{{prettyCreationDate}}</td>
			    <td>
			       <a class="pure-button delete-button pure-button-disabled">
			       		<i class="fa fa-trash-o"></i>
			       </a>
			    </td>
			</tr>
		{{/each}}
	</tbody>
</table>