<h4>System HTTP stats</h4>

 <table class="pure-table">
    <tr>
        <td>Total requests : {{view.totalRequests}}</td>
        <td>Max opened requests : {{view.maxOpenRequests}}</td>
        <td>Opened requests : {{view.openRequests}}</td>
        <td class="warning">
           <i class="fa fa-exclamation-triangle"></i> Requests timed out : {{view.requestTimeouts}}
        </td>
        <td rowspan="2"><span id="legend"}}</td>
    </tr>
    <tr>
        <td>Total connections : {{view.totalConnections}}</td>
        <td>Max opened connections : {{view.maxOpenConnections}}</td>
        <td>Opened connections : {{view.openConnections}}</td>
        <td>Uptime : {{view.uptime}}</td>
    </tr>
</table>

<div id="chart_container">
    <div id="chart"></div>
    <div id="timeline"></div>
    <div id="slider"></div>
</div>